{
    "name": "GuidGenerator",
    "short_name": "GuidGen",
    "version": "1.0.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "GuidGenerator"
    },
    "icons": {
        "16" : "images/gg16.png",
        "48" : "images/gg48.png",
        "128": "images/gg128.png"
    },
    "permissions": [
        "activeTab"
    ]
}